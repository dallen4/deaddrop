{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "build",
        "target": "ES2015",
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
